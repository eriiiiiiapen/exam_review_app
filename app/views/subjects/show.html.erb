<div class="max-w-4xl mx-auto py-8 px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold pr-2"><%= @subject.name %></h1>
    <%= link_to '論点を追加', new_subject_topic_path(@subject), class: "bg-indigo-600 text-white p-2 rounded-md hover:bg-indigo-700" %>
  </div>

  <div class="space-y-4">
    <% @topics.each do |topic| %>
        <div class="p-4 border rounded-lg bg-white flex justify-between items-center shadow-sm">
            <div>
            <h3 class="font-semibold text-gray-800"><%= topic.name %></h3>
            <p class="text-xs text-gray-500">
                前回学習: <%= topic.latest_study_log&.study_on || "未学習" %>
            </p>
            </div>

            <div id="topic_<%= topic.id %>_status">
                <%= render "subjects/status_button", topic: topic %>
            </div>
        </div>
    <% end %>
  </div>
</div>