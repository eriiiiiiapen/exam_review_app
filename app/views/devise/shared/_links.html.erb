<%# app/views/devise/shared/_links.html.erb %>
<div class="mt-4 flex flex-col space-y-2 text-sm text-center border-t pt-4">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログインはこちら", new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "text-blue-600 hover:underline" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "text-gray-500 hover:text-gray-700" %>
  <% end %>
</div>