<%= turbo_stream.replace dom_id(@topic) do %>
  <%= render partial: "topics/topic_card", locals: { topic: @topic } %>
<% end %>

<%= turbo_stream.update "modal", "" %>

<%= turbo_stream.prepend "flash_messages" do %>
  <div data-controller="flash"
    class="fixed bottom-5 right-5 bg-green-600 text-white px-6 py-3 rounded-full shadow-lg z-50">
     「<%= @topic.name %>」を更新しました
  </div>
<% end %>