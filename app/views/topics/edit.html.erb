<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-gray-900/60 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-2xl shadow-xl w-full max-w-lg overflow-hidden">
      <div class="bg-green-600 px-6 py-4 flex justify-between items-center">
        <h3 class="text-white font-bold text-lg flex items-center gap-2">
          <%= @subject.name %>：論点の確認・編集
        </h3>
        <%= link_to topics_path, data: { turbo_frame: "_top" }, class: "text-green-100 hover:text-white" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M6 18L18 6M6 6l12 12" stroke-width="2" stroke-linecap="round"/></svg>
        <% end %>
      </div>

      <%= form_with(model: [@subject, @topic], class: "p-6 space-y-4") do |f| %>
        <div>
          <%= f.label :name, "論点名", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "mt-1 w-full rounded-lg border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500" %>
        </div>

        <div>
          <%= f.label :description, "説明・覚え方メモ", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :description, rows: 6, placeholder: "（例：労災の遺族補償年金は、受給権者が転給しても時効は中断しない...など）",
              class: "mt-1 w-full rounded-lg border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 text-sm" %>
        </div>

        <div>
          <%= f.label :tag_list, "タグ（カンマ区切り）", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :tag_list, class: "mt-1 w-full rounded-lg border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 text-sm" %>
        </div>

        <div class="flex justify-between items-center pt-4 border-t">
          <p class="text-xs text-gray-400">最終更新: <%= l @topic.updated_at, format: :short %></p>
          <div class="flex gap-3">
            <%= link_to "キャンセル", topics_path, data: { turbo_frame: "_top" }, class: "text-gray-500 px-4 py-2 text-sm font-medium" %>
            <%= f.submit "変更を保存", class: "bg-green-600 text-white px-6 py-2 rounded-lg text-sm font-bold hover:bg-green-700 shadow-md cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>