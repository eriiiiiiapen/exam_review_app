<% status = topic.study_status(current_user) %>
<div id="<%= dom_id(topic) %>" 
     class="p-4 bg-white border rounded-xl shadow-sm flex justify-between items-center hover:border-blue-200 transition-colors group 
            <%= status == :weak ? 'border-l-4 border-l-orange-400 bg-orange-50/30' : '' %>">
    
    <div class="flex-1 min-w-0 mr-4">
        <div class="flex items-center gap-2 flex-wrap">
            <%= link_to edit_subject_topic_path(topic.subject, topic), 
                data: { turbo_frame: "modal" }, 
                class: "group/title block truncate" do %>
                <span class="font-bold text-gray-800 text-sm group-hover/title:text-blue-600 group-hover/title:underline">
                    <%= topic.name %>
                </span>
            <% end %>

            <% if status == :new %>
                <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-bold bg-yellow-100 text-yellow-700 animate-pulse">
                    NEW!
                </span>
            <% end %>

            <% if status == :weak %>
                <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-bold bg-orange-100 text-orange-700 animate-pulse">
                    ⚠️ 要復習
                </span>
            <% end %>
        </div>
            <% if topic.description.present? %>
                <p class="text-xs text-gray-400 truncate max-w-md mt-1">
                <%= topic.description %>
                </p>
            <% end %>
        <div class="flex flex-wrap gap-2 mt-2">
        <% if topic.tags.any? %>
            <% topic.tags.each do |tag| %>
            <%= link_to search_topics_path(tag_name: tag.name), 
                class: "text-[10px] font-bold bg-blue-50 text-blue-600 px-2 py-0.5 rounded-md border border-blue-100 hover:bg-blue-600 hover:text-white transition-all" do %>
                #<%= tag.name %>
            <% end %>
            <% end %>
        <% else %>
            <span class="text-[10px] text-gray-300 italic">タグなし</span>
        <% end %>
        </div>
    </div>

    <div class="flex items-center gap-4">
        <div id="topic_<%= topic.id %>_status">
        <%= render "subjects/status_button", topic: topic %>
        </div>
    </div>

    <%= button_to subject_topic_path(topic.subject, topic), 
        method: :delete, 
        form: { data: { turbo_confirm: "「#{topic.name}」を削除してよろしいですか？\n学習記録もすべて消去されます。" } },
        class: "text-gray-300 hover:text-red-500 p-2 transition-colors cursor-pointer" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
    <% end %>
</div>