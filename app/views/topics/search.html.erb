<div class="max-w-6xl mx-auto py-8 px-4">
    <% if @topics.any? %>
        <div class="mb-8 border-b pb-4">
            <h1 class="text-3xl font-extrabold text-gray-900">
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-md">
                # <%= @tag_name %>
            </span>
            </h1>
            <p class="text-gray-500 mt-2 text-sm">各科目における「<%= @tag_name %>」の定義やルールを比較しましょう。</p>
        </div>

        <div class="space-y-6">
            <% @grouped_topics.each do |subject, topics| %>
            <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
                <div class="bg-gray-50 px-6 py-3 border-b border-gray-200 flex justify-between items-center">
                <h2 class="font-bold text-lg text-blue-700"><%= subject.name %></h2>
                <span class="text-xs text-gray-400">論点数: <%= topics.count %></span>
                </div>
                
                <div class="p-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <% topics.each do |topic| %>
                    <div class="border rounded-xl p-4 hover:border-blue-300 transition-colors">
                    <div class="flex flex-col items-start mb-2">
                        <span class="font-bold text-gray-800"><%= topic.name %></span>
                        <%= render "subjects/status_button", topic: topic %>
                    </div>
                    
                    <div class="flex flex-wrap gap-1 mt-3">
                        <% topic.tags.each do |tag| %>
                        <span class="text-[10px] bg-gray-100 px-2 py-0.5 rounded text-gray-500">
                            <%= tag.name %>
                        </span>
                        <% end %>
                    </div>

                    <div class="mt-4 pt-3 border-t text-[11px] text-gray-400 flex justify-between">
                        <span>最終学習: <%= topic.study_logs.order(study_on: :desc).first&.study_on || "未" %></span>
                        <%= link_to "詳細へ", subject_path(subject, anchor: dom_id(topic)), class: "text-blue-500 hover:underline pl-2" %>
                    </div>
                    </div>
                <% end %>
                </div>
            </div>
            <% end %>
        </div>
    <% else %>
        <div class="text-center py-20 bg-white rounded-3xl border-2 border-dashed border-gray-200">
        <div class="text-gray-400 mb-4 text-6xl">🔍</div>
        <h2 class="text-xl font-bold text-gray-600">「<%= @tag_name %>」に一致する論点が見つかりませんでした</h2>
        <p class="text-gray-400 mt-2">別のキーワードで検索するか、論点にタグを追加してみてください。</p>
        <%= link_to "トップに戻る", root_path, class: "mt-6 inline-block text-blue-600 font-bold hover:underline" %>
        </div>
    <% end %>
</div>